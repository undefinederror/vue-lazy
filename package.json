{
  "name": "vue-lazy",
  "version": "1.0.0",
  "description": "A VueJs directive for lazily binding @input events",

  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/undefinederror/vue-lazy.git"
  },
  "bugs": "https://github.com/undefinederror/vue-lazy/issues",

  "main": "dist/vue-lazy.ssr.js",
  "module": "dist/vue-lazy.esm.js",
  "unpkg": "dist/vue-lazy.min.js",

  "files": [
    "dist/*",
    "src/**/*.vue",
    "!src/lib-dev.vue"
  ],

  "scripts": {
    "build": "cross-env NODE_ENV=production rollup --config build/rollup.config.js",
    "build:ssr": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format cjs",
    "build:es": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es",
    "build:unpkg": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife"
  },

  "dependencies": {
    "lodash": "^4.17.15"
  },

  "devDependencies": {
    "cross-env": "^5.2.0",
    "minimist": "^1.2.0",
    "rollup": "^1.12.1",
    "rollup-plugin-buble": "^0.19.6",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-vue": "^5.0.0",
    "vue": "^2.6.10",
    "vue-template-compiler": "^2.6.10"
  }
}
